# Resume Scanner Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# BACKEND CONFIGURATION
# ===========================================

# Database Configuration
DATABASE_URL=sqlite:///./database/resume.db
# For PostgreSQL: postgresql://username:password@localhost:5432/resume_scanner

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_DAYS=7

# AI/LLM Configuration
OLLAMA_API=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# File Upload Configuration
UPLOAD_DIR=./uploads/resumes
PROFILE_PHOTO_DIR=./uploads/profile_photos
MAX_FILE_SIZE=10485760

# User Quota Configuration
MAX_MONTHLY_SCANS=10

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourapp.com

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# API Configuration
REACT_APP_API_URL=http://localhost:8000

# Environment
NODE_ENV=development

# ===========================================
# DOCKER CONFIGURATION
# ===========================================

# Production API URL (for Docker)
API_URL=http://localhost:8000

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Debug Mode
DEBUG=true

# Log Level
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

